<!-- Header -->
<div class="site-blocks-cover" data-aos="fade">
  <div class="container">
    <div class="row align-items-start align-items-md-center justify-content-end">
      <div class="col-md-7 text-center text-md-left pt-5 pt-md-0">
        <img src="/assets/images/products/glasses_1.jpg" width="500px" />
      </div>
      {% for item in featured_products %}
          <div class="col-md-5 text-center text-md-left pt-5 pt-md-0">
            <h1 class="mb-2">{{item.title}}</h1>
            <div class="intro-text text-center text-md-left">
              <p class="mb-4">
                {{item.description}}
              </p>
              <p>
                <a href="shop.html" class="btn btn-sm btn-primary">Shop Now</a>
              </p>
            </div>
          </div>
      {% endfor %}
      

    </div>
  </div>
</div>
